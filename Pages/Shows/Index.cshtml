@page
@model MiMovieDatabase.Pages.Shows.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Show[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].Genre)
            </th>
            <th>
                Runtime
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Show[0].Seasons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].HasEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].WasCancelled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Show) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release) - @Html.DisplayFor(modelItem => item.EndYear)
            </td>
            <td>
                    @if(item.HasEnded == true)
                    {
                        <p>Ended</p>
                    }
                    else
                    {
                        <p>Ongoing</p>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WasCancelled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasons)
            </td>
            <td>
                <p>@Html.DisplayFor(modelItem => item.Rating)/10</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
